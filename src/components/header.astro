---
import Website from "../assets/icons/websitelogo.svg";
import Rectangle from "../assets/heroshapes/Rectanglehero.svg";
import Profile from "../assets/icons/profile.svg";
import Search from "../assets/icons/search.svg";
import Arrowdown from "../assets/icons/arrowdown.svg";
import OpenMenu from "../assets/icons/hamburger.svg";
import CloseMenu from "../assets/icons/Close_menu.svg";

const navLinks = [
  { name: 'Home', url: '/about' },
  { name: 'Category', url: '/category', hasDropdown: true },
  { name: 'About', url: '/about' },
  { name: 'Contact', url: '/contact' },
];
---

<header
    id="header"
    class="relative flex justify-between py-7 px-4 mx-auto z-30"
>
    <!-- Navigation bar -->
    <nav
        id="navbar"
        class="relative flex gap-12 justify-between items-center w-full max-w-7xl mx-auto"
        x-data="{ MobileMenu: false}"
        x-data="Search: false"
    >
    
        <div class="hidden lg:flex items-center gap-12 text-primary">
            <!-- Logo Website -->
            <a>
                <Website href="" class="z-10" />
                <!-- <Rectangle class="absolute text-secondary -top-155 -left-90 rotate-25 -z-9"/> -->
            </a>
            <!-- Pages links -->
            <ul class="flex font-bold gap-12">
                <li>
                    <a href="/">Home</a>
                </li>
                <li>
                    <a href="/category">Category</a>
                </li>
                <li>
                    <a href="/about">About</a>
                </li>
                <li>
                    <a href="/contact">Contact</a>
                </li>
            </ul>
        </div>
        <!--  -->
        <div class="hidden lg:flex gap-3">
            <div
                class="flex px-4 py-2 bg-neutral-0 items-center rounded-full gap-4"
            >
                <Search />
                <input
                    type="search"
                    placeholder="Search something here!"
                    class="rounded-full focus:outline-none"
                />
            </div>
            <button
                class="bg-primary text-neutral-0 rounded-full hover:bg-primary-60 font-bold transition cursor-pointer px-7 py-3"
            >
                Join the community
            </button>
            <div class="flex items-center p-2 gap-2">
                <Profile />
                VND
                <Arrowdown />
            </div>
        </div>
        <div
            class="flex justify-between items-center lg:hidden text-neutral-100 w-full"
        >
            <button @click="MobileMenu = !MobileMenu" class="px-2 py-2">
                <OpenMenu class="w-5 h-5" x-show="!MobileMenu" x-cloak />
                <CloseMenu class="w-5 h-5" x-show="MobileMenu" x-cloak />
            </button>

            <Website />
            <div x-data="{ SearchBar: false }" class="relative w-auto">
                <!-- Search icon -->
                <Search
                    class="w-6 h-6 cursor-pointer"
                    @click="SearchBar = !SearchBar"
                />

                <!-- Search bar -->
                <div
                    class="absolute right-0 flex px-4 py-2 bg-neutral-0 items-center border rounded-full w-64 gap-4"
                    x-show="SearchBar"
                    @click.outside="SearchBar = false"
                    x-transition:enter="transition ease-out duration-300"
                    x-transition:enter-start="opacity-0 translate-x-full"
                    x-transition:enter-end="opacity-100 translate-x-0"
                    x-transition:leave="transition ease-in duration-300"
                    x-transition:leave-start="opacity-100 translate-x-0"
                    x-transition:leave-end="opacity-0 translate-x-full"
                    x-cloak
                >
                    <Search class="w-5 h-5 text-neutral-500" />
                    <input
                        type="search"
                        placeholder="Search something here!"
                        class="w-full rounded-full focus:outline-none text-neutral-800"
                    />
                </div>
            </div>
        </div>

        <div
            class="flex flex-col justify-between bg-secondary absolute top-20 left-0 w-full h-screen lg:hidden rounded-2xl p-10 z-20"
            x-show="MobileMenu"
            @click.away="MobileMenu = false"
            x-transition:enter="transition ease-out duration-300"
            x-transition:enter-start="opacity-0 transform -translate-x-full"
            x-transition:enter-end="opacity-100 transform translate-x-0"
            x-transition:leave="transition ease-in duration-300"
            x-transition:leave-start="opacity-100 transform translate-x-0"
            x-transition:leave-end="opacity-0 transform -translate-x-full"
        >
            <ul class="flex flex-col gap-8">
                <li>
                    <a href="/">Home</a>
                </li>
                <li>
                    <a href="/category">Category</a>
                </li>
                <li>
                    <a href="/about">About</a>
                </li>
                <li>
                    <a href="/contact">Contact</a>
                </li>
            </ul>
            <div class="flex flex-col w-full text-neutral-0 gap-6 mx-auto">
                <button
                    class="flex justify-center bg-primary px-7 py-3 rounded-full hover:bg-primary-60 transition cursor-pointer"
                >
                    Join the community
                </button>
                <div
                    class="flex justify-center items-center bg-primary w-full rounded-full font-regular hover:bg-primary-60 transition cursor-pointer gap-2 p-2 mx-auto"
                >
                    <Profile />
                    VND
                </div>
            </div>
        </div>
    </nav>
</header>
