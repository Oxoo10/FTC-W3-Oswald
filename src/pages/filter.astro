---
import { Image } from "astro:assets";
import Layout from "../layouts/layout.astro";
// Sample puppy data - replace with your actual data source
const puppies = [
  { id: 1, name: "Buddy", breed: "Golden Retriever", gender: "male", price: 800, image: "/puppy1.jpg" },
  { id: 2, name: "Bella", breed: "Labrador", gender: "female", price: 750, image: "/puppy2.jpg" },
  { id: 3, name: "Max", breed: "German Shepherd", gender: "male", price: 900, image: "/puppy3.jpg" },
  { id: 4, name: "Luna", breed: "Border Collie", gender: "female", price: 850, image: "/puppy4.jpg" },
  { id: 5, name: "Charlie", breed: "Beagle", gender: "male", price: 700, image: "/puppy5.jpg" },
  { id: 6, name: "Daisy", breed: "Poodle", gender: "female", price: 950, image: "/puppy6.jpg" },
];
---

<Layout>
<div 
  x-data="{
    puppies: JSON.parse(`${JSON.stringify(puppies)}`),
    selectedGender: 'all',
    get filteredPuppies() {
      if (this.selectedGender === 'all') {
        return this.puppies;
      }
      return this.puppies.filter(puppy => puppy.gender === this.selectedGender);
    }
  }"
  class="container mx-auto px-4 py-8"
>
  <!-- Filter Controls -->
  <div class="mb-8">
    <h2 class="text-2xl font-bold mb-4 text-gray-800">Filter by Gender</h2>
    <div class="flex flex-wrap gap-3">
      <button
        @click="selectedGender = 'all'"
        :class="{
          'bg-blue-600 text-white': selectedGender === 'all',
          'bg-gray-200 text-gray-700 hover:bg-gray-300': selectedGender !== 'all'
        }"
        class="px-6 py-2 rounded-lg font-medium transition-colors duration-200"
      >
        All Puppies
        <span 
          class="ml-2 px-2 py-1 text-xs rounded-full bg-white bg-opacity-20"
          x-text="puppies.length"
        ></span>
      </button>
      
      <button
        @click="selectedGender = 'male'"
        :class="{
          'bg-blue-600 text-white': selectedGender === 'male',
          'bg-gray-200 text-gray-700 hover:bg-gray-300': selectedGender !== 'male'
        }"
        class="px-6 py-2 rounded-lg font-medium transition-colors duration-200"
      >
        Male
        <span 
          class="ml-2 px-2 py-1 text-xs rounded-full bg-white bg-opacity-20"
          x-text="puppies.filter(p => p.gender === 'male').length"
        ></span>
      </button>
      
      <button
        @click="selectedGender = 'female'"
        :class="{
          'bg-blue-600 text-white': selectedGender === 'female',
          'bg-gray-200 text-gray-700 hover:bg-gray-300': selectedGender !== 'female'
        }"
        class="px-6 py-2 rounded-lg font-medium transition-colors duration-200"
      >
        Female
        <span 
          class="ml-2 px-2 py-1 text-xs rounded-full bg-white bg-opacity-20"
          x-text="puppies.filter(p => p.gender === 'female').length"
        ></span>
      </button>
    </div>
  </div>

  <!-- Results Count -->
  <div class="mb-6">
    <p class="text-gray-600">
      Showing <span x-text="filteredPuppies.length" class="font-semibold"></span> 
      <span x-text="selectedGender === 'all' ? 'puppies' : selectedGender + ' puppies'"></span>
    </p>
  </div>

  <!-- Puppy Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
    <template x-for="puppy in filteredPuppies" :key="puppy.id">
      <div 
        class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300 overflow-hidden"
        x-transition:enter="transition ease-out duration-300"
        x-transition:enter-start="opacity-0 scale-95"
        x-transition:enter-end="opacity-100 scale-100"
      >
        <!-- Puppy Image -->
        <div class="relative">
          <img 
            :src="puppy.image" 
            :alt="puppy.name"
            class="w-full h-48 object-cover"
            onerror="this.src='https://via.placeholder.com/300x200/f3f4f6/9ca3af?text=Puppy'"
          />
          <!-- Gender Badge -->
          <div 
            class="absolute top-2 right-2 px-2 py-1 rounded-full text-xs font-medium"
            :class="{
              'bg-blue-100 text-blue-800': puppy.gender === 'male',
              'bg-pink-100 text-pink-800': puppy.gender === 'female'
            }"
          >
            <span x-text="puppy.gender === 'male' ? '♂ Male' : '♀ Female'"></span>
          </div>
        </div>
        
        <!-- Puppy Details -->
        <div class="p-4">
          <h3 class="font-bold text-lg text-gray-800 mb-1" x-text="puppy.name"></h3>
          <p class="text-gray-600 text-sm mb-2" x-text="puppy.breed"></p>
          <div class="flex justify-between items-center">
            <span class="text-2xl font-bold text-green-600">
              $<span x-text="puppy.price"></span>
            </span>
            <button class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md text-sm font-medium transition-colors duration-200">
              View Details
            </button>
          </div>
        </div>
      </div>
    </template>
  </div>

  <!-- No Results Message -->
  <div 
    x-show="filteredPuppies.length === 0"
    x-transition:enter="transition ease-out duration-300"
    x-transition:enter-start="opacity-0"
    x-transition:enter-end="opacity-100"
    class="text-center py-12"
  >
    <div class="text-gray-500">
      <svg class="mx-auto h-12 w-12 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 12h6m-6-4h6m2 5.291A7.962 7.962 0 0112 15c-2.34 0-4.541-.79-6.288-2.115C3.908 11.046 3 8.622 3 6c0-.777.166-1.516.465-2.184M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <h3 class="text-lg font-medium text-gray-900 mb-1">No puppies found</h3>
      <p class="text-gray-500">Try adjusting your filter selection.</p>
    </div>
  </div>
</div>

<script>
  // Optional: You can add additional JavaScript here for more complex interactions
  // For example, URL state management or analytics tracking
  document.addEventListener('alpine:init', () => {
    // Any additional Alpine.js setup can go here
  });
</script>

<style>
  /* Optional: Add any custom styles here */
  [x-cloak] { 
    display: none !important; 
  }
</style>

</Layout>